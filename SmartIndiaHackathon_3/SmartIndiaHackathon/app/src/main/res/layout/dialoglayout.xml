<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dialogImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.jediburrell.customfab.FloatingActionButton
        android:id="@+id/img"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/send"
        android:layout_alignEnd="@id/dialogImage"
        android:layout_alignRight="@id/dialogImage"
        android:layout_alignBottom="@id/dialogImage"
        app:fabType="custom"
        app:fabShape="@drawable/fab_shape"
        app:fabIcon="@drawable/send"
        app:fabColor="@color/grey"
        app:fabSize="mini"/>

</RelativeLayout>