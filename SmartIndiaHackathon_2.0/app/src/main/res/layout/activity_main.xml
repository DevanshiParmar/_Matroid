<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_pg_top"
        android:layout_marginBottom="@dimen/margin_pg_top"
        android:layout_above="@+id/l2"
        android:id="@+id/img">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/login_pg" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/margin_pg_extra"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/margin_pg_extra"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_3"
            android:text="Login"
            android:layout_marginTop="@dimen/interline_spacing"
            android:textColor="@color/text_dark" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:background="@drawable/button_border_2"
            android:text="New User"
            android:layout_marginTop="@dimen/interline_spacing_large"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>

</RelativeLayout>